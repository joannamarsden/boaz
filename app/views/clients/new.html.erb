<h1> New Client </h1>

<%= form_for :client, url: clients_path do |f| %>
  <p>
    <%= f.label :first_name %><br>
    <%= f.text_field :first_name %>
  </p>

  <p>
    <%= f.label :last_name %><br>
    <%= f.text_field :last_name %>
  </p>

  <p>
    <%= f.label :email %><br>
    <%= f.text_field :email %>
  </p>

   <p>
    <%= f.label :cell_phone %><br>
    <%= f.text_field :cell_phone %>
  </p>

   <p>
    <%= f.label :home_phone %><br>
    <%= f.text_field :home_phone %>
  </p>

   <p>
    <%= f.label "Mailing Address" %><br>
    <%= f.text_field :mailing_add %>
  </p>

   <p>
    <%= f.label "Billing Address" %><br>
    <%= f.text_field :billing_add %>
  </p>
 
  <p>
    <%= f.submit %>
  </p>
<% end %>

<%= link_to 'Order Restoration', new_restoration_path %>
